{% assign grid = widget-gallery-examples[key] | fixCoordinates %} 
{% assign actualCaption = caption | default:key %} 

<div class="map {{size}}">
<div class="actualMap" style="background:#ccf5ff">
{% for point in grid.points %}
  {% include square, x: point.x, y: point.y, color:point.color, text:point.label %}
{% endfor %}
</div>

{% if actualCaption %}
  <div class="caption" align="center">{{actualCaption}}</div>
{% endif %}
</div>
